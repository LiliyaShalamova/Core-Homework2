@using CoreHomework2.Services
@{
    ViewData["Title"] = "All";
    Layout = "_Layout";
}
@inject IStudentService service
@{
    var students = service.All();
}

<table class="table">
    <tr><td>Имя</td><td>Фамилия</td><td>Группа</td></tr>
    @foreach (var student in students)
    {
        <tr>
                <td>@student.Name</td>
                <td>@student.LastName</td>
                <td>@student.Group</td>
                <td>
                    <a href="/Student/Read?id=@student.Id">
                        <button>Просмотр</button>
                    </a>
                </td>
                <td>
                    <a href="/Student/Update?id=@student.Id">
                        <button>Редактировать</button>
                    </a>
                </td>
                <td>
                    <a href="/Student/Delete?id=@student.Id">
                        <button>Удалить</button>
                    </a>
                </td>
        </tr>
    }
</table>
<br>
<a href="/Student/Create">
    <button>Создать</button>
</a>